<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/listview_selector"
        android:clipToPadding="false"
        tools:layout_editor_absoluteX="34dp"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <View
            android:id="@+id/icono_canal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/chaticon"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/nombre_canal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/avatar"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:paddingBottom="4dp"
            android:text="NombreCanal"
            android:textColor="@color/colorNegro"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ultimo_mensaje"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_canal"
            android:layout_alignStart="@+id/nombre_canal"
            android:layout_alignLeft="@+id/nombre_canal"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:maxLength="50"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/hora_ultimo_mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ultimo_mensaje"
            android:layout_alignRight="@+id/ultimo_mensaje"
            android:layout_alignBottom="@+id/ultimo_mensaje"
            android:layout_marginEnd="-60dp"
            android:layout_marginRight="-60dp"
            android:layout_marginBottom="-9dp"
            android:text="TextView"
            android:textSize="11dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/idNumNoLeido"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/nombre_canal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="66dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/fondonumero"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>